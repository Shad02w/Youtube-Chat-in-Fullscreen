{
    "name": "Youtube Chat in Fullscreen",
    "description": "Show Youtube live chat when entering full screen mode",
    "version": "1.0",
    "manifest_version": 2,
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "/images/chat.png"
    },
    "permissions": [
        "tabs",
        "webRequest",
        "*://*.youtube.com/"
    ],
    "content_security_policy": "script-src 'self' https://apis.google.com; object-src 'self'",
    "web_accessible_resources": [
        "xhrMod.js"
    ]
}