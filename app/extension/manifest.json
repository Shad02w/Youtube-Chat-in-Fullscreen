{
    "manifest_version": 3,
    "name": "Youtube Chat in Fullscreen",
    "description": "A chrome extension creates an overlay to show Youtube live chat when in full screen",
    "version": "2.0.4",
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["*://*.youtube.com/*"],
            "js": ["inject.js"],
            "run_at": "document_idle"
        }
    ]
}
