{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "jsx": "react",
        "lib": ["DOM", "ES2015", "ES2019", "ESNext"],
        "baseUrl": "./src",
        "inlineSources": true,
        "paths": {
            "@hooks/*": ["components/hooks/*"],
            "@components/*": ["components/*"],
            "@models/*": ["models/*"],
            "@css/*": ["css/*"],
            "@icons/*": ["icons/*"],
            "@contexts/*": ["contexts/*"],
            "@/*": ["./*"]
        },
        "types": ["chrome", "jest"]
    }
}
