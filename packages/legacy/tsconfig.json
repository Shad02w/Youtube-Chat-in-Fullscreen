{
    "extends": "../../configs/tsconfig.base.json",
    "compilerOptions": {
        "jsx": "react",
        "target": "ES6",
        "module": "ES2020",
        "lib": ["DOM", "ES2015", "ES2019", "ESNext"],
        "baseUrl": "./src",
        "paths": {
            "@hooks/*": ["components/hooks/*"],
            "@components/*": ["components/*"],
            "@utils/*": ["utils/*"],
            "@models/*": ["models/*"],
            "@type/*": ["type/*"],
            "@css/*": ["css/*"],
            "@assets/*": ["assets/*"],
            "@icons/*": ["icons/*"],
            "@contexts/*": ["contexts/*"],
            "@/*": ["./*"]
        },
        "types": ["chrome"]
    },
    "include": ["src"],
    "exclude": ["src/coverage"]
}
